{% extends "::dialog.layout.html.twig" %}

{% block dialog_form_class %}word-form word-form-translation{% endblock dialog_form_class %}


{% block dialog_header %}{{ 'word.new' | trans({
'%theme%': theme,
'%source%' : theme.sourceCulture,
'%target%' : theme.targetCulture }, 'word_forms') }}{% endblock dialog_header %}

{% block dialog_body %}
  {% block form_rows %}
    {% include "SiteBaseBundle:Word:_form_word_translation.html.twig" %}
  {% endblock form_rows %}
  {{ form_rest(form) }}
{% endblock dialog_body %}

{% block dialog_footer %}
  <button type="submit" class="btn btn-success">
    {% block form_submit %}{{ 'word.buttons.continue' | trans({}, 'word_forms') }}{% endblock form_submit %}
  </button>
{% endblock dialog_footer %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('bundles/sitebase/js/word-form.js') }}"></script>
{% endblock javascripts %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets filter="compass, ?yui_css" "@SiteBaseBundle/Resources/assets/css/word_forms.scss" %}
  <link rel="stylesheet" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock stylesheets %}