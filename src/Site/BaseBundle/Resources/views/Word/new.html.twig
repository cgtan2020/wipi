{% extends "::base.html.twig" %}

{% block body %}
  {% form_theme form "RodgermdSfToolsBundle:Form:bootstrap_control_groups_theme.html.twig" %}
  <form action="{{ path('word.new', { slug: theme.slug}) }}" method="POST" class="form-horizontal word-form word-form-step1">
    <div class="modal inline">
      <div class="modal-header">
        <h3>{{ 'word.new' | trans({ '%theme%': theme }, 'WordForms') }}</h3>
      </div>
      <div class="modal-body">
        <div class="word-source-container">
        {{ form_row(form.source) }}
          <button class="btn btn-success" data-target="{{ path() }}">{{ 'word.findtranslation' | trans({}, 'WordForms') }}</button>
        </div>
        <div class="word-target-container">
          {{ form_row(form.target) }}
        </div>
        {{ form_rest(form) }}
      </div>
      <div class="modal-footer">
        <input type="submit" value="{{ 'word.create' | trans }}" class="btn btn-success"/>
      </div>
  </form>

{% endblock body %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('@SiteBaseBundle/Resources/public/js/word-form-step1.js') }}"></script>
{% endblock javascripts %}