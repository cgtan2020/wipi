{% form_theme form "RodgermdSfToolsBundle:Form:bootstrap_control_groups_theme.html.twig" %}
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_registration_register">
  <div class="modal">
    <div class="modal-header">
      <h3>{{ 'Register' | trans }}</h3>
    </div>
    <div class="modal-body">
    {{ form_widget(form) }}
    </div>
    <div class="modal-footer">
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success"/>
    </div>
</form>
