{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
  <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">

    <div class="modal">
      <div class="modal-header">
        <h3>{{ 'Log in' | trans }}</h3>
      </div>
      <div class="modal-body">
        {% if error %}
          <div class="alert alert-block alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
        <div class="control-group">
          <label class="control-label" for="username">{{ 'Email' | trans }}:</label>

          <div class="controls">
            <input required="required" type="text" id="username" name="_username" placeholder="{{ 'Email' | trans }}"/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password">{{ 'Password' | trans }}:</label>

          <div class="controls">
            <input required="required" type="password" id="password" name="_password"
                   placeholder="{{ 'Password' | trans }}"/>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <span class="pull-right">
          <button type="submit"
                  class="btn btn-success">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
        <label class="checkbox" for="remember_me">
          <input type="checkbox" id="remember_me" name="_remember_me"
                 value="on"/> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
        </label>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
          </span>
        <span class="pull-left forgot-register-holder">
        <a href="{{ path('fos_user_registration_register') }}">{{ 'Register' | trans }}</a>.
        <a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot password?' | trans }}</a>
          </span>
      </div>
    </div>
  </form>
{% endblock fos_user_content %}

